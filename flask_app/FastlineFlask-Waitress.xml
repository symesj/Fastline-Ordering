<?xml version="1.0" encoding="UTF-16"?>
<Task version="1.6" xmlns="http://schemas.microsoft.com/windows/2004/02/mit/task">
  <RegistrationInfo>
    <Description>Start Fastline Flask (Waitress) at user logon. Writes logs to .\logs\waitress.log</Description>
    <URI>\Fastline\FastlineFlask-Waitress</URI>
  </RegistrationInfo>
  <Triggers>
    <!-- On logon of the service account (adjust UserId as needed) -->
    <LogonTrigger>
      <Enabled>true</Enabled>
      <UserId>SYSTEM</UserId>
    </LogonTrigger>
    <!-- Optional: also start at boot -->
    <BootTrigger>
      <Enabled>true</Enabled>
    </BootTrigger>
  </Triggers>
  <Principals>
    <!-- Run with highest privileges; set to an account that can access the project folder -->
    <Principal id="Author">
      <UserId>S-1-5-18</UserId> <!-- Local System -->
      <RunLevel>HighestAvailable</RunLevel>
      <LogonType>ServiceAccount</LogonType>
    </Principal>
  </Principals>
  <Settings>
    <MultipleInstancesPolicy>IgnoreNew</MultipleInstancesPolicy>
    <DisallowStartIfOnBatteries>false</DisallowStartIfOnBatteries>
    <StopIfGoingOnBatteries>false</StopIfGoingOnBatteries>
    <AllowHardTerminate>true</AllowHardTerminate>
    <StartWhenAvailable>true</StartWhenAvailable>
    <RunOnlyIfNetworkAvailable>false</RunOnlyIfNetworkAvailable>
    <IdleSettings>
      <StopOnIdleEnd>false</StopOnIdleEnd>
      <RestartOnIdle>false</RestartOnIdle>
    </IdleSettings>
    <AllowStartOnDemand>true</AllowStartOnDemand>
    <Hidden>false</Hidden>
    <RunOnlyIfIdle>false</RunOnlyIfIdle>
    <WakeToRun>false</WakeToRun>
    <ExecutionTimeLimit>PT0S</ExecutionTimeLimit>
    <Priority>7</Priority>
  </Settings>
  <Actions Context="Author">
    <Exec>
      <Command>C:\Windows\System32\WindowsPowerShell\v1.0\powershell.exe</Command>
      <Arguments>-NoProfile -ExecutionPolicy Bypass -File "C:\Users\fladmin\Documents\flask_app\start_flask_waitress.ps1" -Port 5000</Arguments>
      <WorkingDirectory>C:\Users\fladmin\Documents\flask_app</WorkingDirectory>
    </Exec>
  </Actions>
</Task>
