<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- All requests handled by Python via wfastcgi -->
      <add name="Python FastCGI" path="*" verb="*" modules="FastCgiModule" scriptProcessor="C:\Users\fladmin\Documents\flask_app\venv\Scripts\python.exe|C:\Users\fladmin\Documents\flask_app\venv\Lib\site-packages\wfastcgi.py" resourceType="Unspecified" requireAccess="Script" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="StaticFileOrWsgi" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAny">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" pattern="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" pattern="true" />
          </conditions>
          <action type="None" />
        </rule>
        <rule name="SendToWSGI" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="wfastcgi.py" />
        </rule>
      </rules>
    </rewrite>
    <httpErrors existingResponse="PassThrough"/>
  </system.webServer>

  <appSettings>
    <!-- WSGI module points to your callable in wsgi.py -->
    <add key="WSGI_HANDLER" value="wsgi.application" />
    <add key="PYTHONPATH" value="C:\Users\fladmin\Documents\flask_app" />

    <!-- Optional: environment variables for Graph auth -->
    <add key="GRAPH_TENANT_ID" value="" />
    <add key="GRAPH_CLIENT_ID" value="" />
    <add key="GRAPH_CLIENT_SECRET" value="" />
  </appSettings>
</configuration>
